<div class="container mt-5">
<p id="notice"><%= notice %></p>
<h1 class="text-center mb-3">Users</h1>
<table class="table table-dark table-striped table-hover text-center w-80">
  <thead>
    <tr>
      <th scope="col" class="text-center">First</th>
      <th scope="col" colspan ="1" class="text-center">Email</th>
      <th scope="col" class="text-center">Actions</th>
      
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<br>
<div class="text-center">
<%= link_to 'New user', new_user_path, class: "btn btn-dark" %> 
</div>
</div>