<div class="container-fluid justify-content-center my-5 text-center">
  <% if @user.errors.any? %>
  <div class="my-3">
    <% @user.errors.full_messages.each do |msg| %>
        <h6><%= msg %></h6>
    <% end %>
    </div>
  <% end %>
  <%= form_with model: @user do |f| %>
  <%= f.text_field :username %> <br/><br/>
  <%= f.email_field :email %> <br/><br/>
  <%= f.password_field :password %> <br/><br/>
  <%= f.submit 'update', class:"btn btn-primary mb-2" %>
<% end %>
</div>